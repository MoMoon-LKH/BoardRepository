<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.momoon.board.token.repository.TokenRepository">

    <insert id="addRefreshToken">
        INSERT INTO
            tokeninfo (memberId, tokenValue)
        VALUES (#{memberId}, #{tokenValue})
    </insert>

    <update id="updateToken" parameterType="com.momoon.board.token.domain.TokenInfo">
        UPDATE tokeninfo
        SET
            tokenValue = #{tokenValue},
            createDate = #{createDate}
        WHERE memberId = #{memberId}
    </update>

    <delete id="deleteByMemberId" parameterType="Long">
        DELETE FROM tokeninfo
        WHERE memberId = #{memberId}

    </delete>


    <select id="findByMemberIdAndTokenValue" parameterType="String" resultType="com.momoon.board.token.domain.TokenInfo">
        SELECT t.memberId, t.tokenValue, t.createDate FROM tokeninfo t
            INNER JOIN member m ON t.memberId = m.id
        WHERE m.memberId = #{memberId} AND t.tokenValue = #{tokenValue}
    </select>
</mapper>